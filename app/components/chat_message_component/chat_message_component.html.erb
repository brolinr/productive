<div class="flex flex-row gap-2">
  <div class="w-10 h-10 rounded-full bg-emerald-400 text-white flex justify-center items-center font-bold text-xl">
    <span class="mx-auto">
      <%= @sender.split(' ')[0, 2].map(&:first).join %>
    </span>
  </div>
  <div class="bg-slate-100 py-2 px-3 w-fit rounded-lg">
    <p class="font-bold text-sm">
      <%= @sender %>
      <span class="text-xs font-normal text-slate-500">
        <%= @time.strftime("%H:%M") %>
      </span>
    </p>

    <span class="text-sm">
      <%= @message %>
    </span>
  </div>
</div>