<div class="md:w-[90%] shadow-2xl rounded-xl border py-8 mx-auto relative px-4 md:px-0">
  <section id="header">
    <div class="text-center w-full mb-3">
      <h1 class="text-4xl mb-1 font-bold"><%= current_project.name %></h1>
      <p class="text-base font-medium md:w-4/5 mx-auto">
        <%= current_project.description %>
      </p>
    </div>

    <div class="flex justify-center items-center gap-2 flex-row">
      <button class="border border-slate-400 text-slate-600 px-3 py-1 rounded-full">
        Add more people
      </button>
      <div class="flex">
        <% current_project.project_users.each_with_index do |project_user, index| %>
          <% if index < 10 %>
            <div
              class="w-8 h-8 border-2 border-white rounded-full text-white bg-yellow-400 duration-300 flex items-center justify-center -ml-2 first:ml-0"
            >
              <h1 class="font-bold text-lg">
                <%= project_user.user.name.split('')[0].upcase %>
              </h1>
            </div>
          <% elsif index == 8 %>
            <div
              class="w-8 h-8 rounded-full text-slate-700 font-bold duration-300 flex items-center justify-center bg-slate-200"
            >
              <span>+<%= current_project.project_users.count - 7 %></span>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>
  <section id="features" class="mt-10">
    <div class="grid md:grid-cols-3">
      <div class="w-full border p-4 rounded flex flex-col justify-center items-center hover:rounded-t-lg hover:scale-105 duration-300 hover:border-2 bg-white">
        <h1 class="font-bold text-2xl mb-4">Message board</h1>
        <div class="rounded-full w-20 h-20 flex justify-center items-center text-white mb-3 bg-indigo-400">
          <h1 class="text-4xl mb-1">+</h1>
        </div>

        <p class="text-slate-500 text-center mb-4">
          Post anouncements, pitch ideas, and hold discussions on topics.
        </p>

        <%= link_to 'Browse', project_message_boards_path, class: 'border border-slate-400 text-slate-600 px-3 py-1 rounded-full' %>
      </div>

      <div class="w-full border p-4 rounded flex flex-col justify-center items-center hover:rounded-t-lg hover:scale-105 duration-300 hover:border-2 bg-white">
        <h1 class="font-bold text-2xl mb-4">Chats</h1>
        <div class="rounded-full w-20 h-20 flex justify-center items-center text-white mb-3 bg-orange-400">
          <h1 class="text-4xl mb-1">+</h1>
        </div>

        <p class="text-slate-500 text-center mb-4">
          Directly communicate with other users within the project.
        </p>
        <%= link_to 'Browse', project_chats_path, class: 'border border-slate-400 text-slate-600 px-3 py-1 rounded-full' %>
      </div>

      <div class="w-full border p-4 rounded flex flex-col justify-center items-center hover:rounded-t-lg hover:scale-105 duration-300 hover:border-2 bg-white">
        <h1 class="font-bold text-2xl mb-4">Todo list</h1>
        <div class="rounded-full w-20 h-20 flex justify-center items-center text-white mb-3 bg-yellow-400">
          <h1 class="text-4xl mb-1">+</h1>
        </div>

        <p class="text-slate-500 text-center mb-4">
          Create as many lists as your project needs and populate them
          with tasks you can assign to users.
        </p>

        <%= link_to 'Browse', project_todo_lists_path, class: 'border border-slate-400 text-slate-600 px-3 py-1 rounded-full' %>
      </div>

      <div class="w-full border p-4 rounded flex flex-col justify-center items-center hover:rounded-t-lg hover:scale-105 duration-300 hover:border-2 bg-white">
        <h1 class="font-bold text-2xl mb-4">Event Scheduler</h1>
        <div class="rounded-full w-20 h-20 flex justify-center items-center text-white mb-3 bg-emerald-400">
          <h1 class="text-4xl mb-1">+</h1>
        </div>

        <p class="text-slate-500 text-center mb-4">
          Save dates for your one time and regular events.
        </p>

        <%= link_to 'Browse', project_events_path, class: 'border border-slate-400 text-slate-600 px-3 py-1 rounded-full' %>
      </div>

      <div class="w-full border p-4 rounded flex flex-col justify-center items-center hover:rounded-t-lg hover:scale-105 duration-300 hover:border-2 bg-white">
        <h1 class="font-bold text-2xl mb-4">Kanban</h1>
        <div class="rounded-full w-20 h-20 flex justify-center items-center text-white mb-3 bg-slate-600">
          <h1 class="text-4xl mb-1">+</h1>
        </div>

        <p class="text-slate-500 text-center mb-4">
          Easy to use kanaban tool with customizable flow, designed for
          reactive work.
        </p>

        <%= link_to 'Browse', root_path, class: 'border border-slate-400 text-slate-600 px-3 py-1 rounded-full' %>
      </div>

      <div class="w-full border p-4 rounded flex flex-col justify-center items-center hover:rounded-t-lg hover:scale-105 duration-300 hover:border-2 bg-white">
        <h1 class="font-bold text-2xl mb-4">Settings</h1>
        <div class="rounded-full w-20 h-20 flex justify-center items-center text-white mb-3 bg-sky-500">
          <h1 class="text-4xl mb-1">+</h1>
        </div>

        <p class="text-slate-500 text-center mb-4">
          Manage this project from user access, view, shortcuts and naming
          conventions.
        </p>

        <%= link_to 'Browse', project_settings_path, class: 'border border-slate-400 text-slate-600 px-3 py-1 rounded-full' %>
      </div>
    </div>
  </section>
</div>
