
<% locales[:toasts].each do |toast| %>
 <% next if toast.blank? %>
  <div
    data-controller="toast"
    data-toast-target="toast"
    class="toast fixed top-4 right-4 bg-blue-400 text-black px-4 py-2 rounded shadow-md z-50 w-49"
  >
    <% if toast.is_a?(Array) %>
      <ul class="list-disc">
        <% toast.each do |message| %>
          <% next if message.blank? %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% elsif toast.is_a?(String) %>
      <span class="text-sm"><%= toast %></span>
    <% end%>
  </div>
<% end %>